body
  margin 0
  font-family "Arial", sans-serif
  font-size 16px
  line-height 1.5em
  color $color-black

p
  margin-bottom 1em

a
  color $color-main
  text-decoration none

.container
  width 270px
  margin-left auto
  margin-right auto
  transition 0.3s

@media (min-width 480px)
  .container
    width 430px

@media (min-width 768px)
  .container
    width 660px

@media (min-width 1024px)
  .container
    width 940px
